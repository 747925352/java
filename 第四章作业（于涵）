package java43;
import java.util.*;
public class award {

	public static void main(String[] args) {
		System.out.print("Please enter Xiaoming's score:");
		Scanner input=new Scanner(System.in);
		double score=input.nextDouble();
		if(score==100){
			System.out.print("Buy a car");
		}else if(score>=90){
			System.out.print("Buy a Mp4");
		}else if(score>=60){
			System.out.print("Buy a book");
		}else{
			System.out.print("Nothing");
		}

	}

}
package java43;

import java.util.Scanner;

public class week {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Please enter one day of the week using number ");
		int weekd = input.nextInt();
		switch (weekd) {
		case 1:
		case 3:
		case 5:
			System.out.println("program code");
			break;
		case 2:
		case 4:
			System.out.println("rest");
			break;
		case 7:
			System.out.println("learn English");
			break;
		}

	}

}
